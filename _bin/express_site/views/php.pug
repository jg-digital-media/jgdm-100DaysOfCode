extends layout.pug

block content
    h2.card-title PHP Cards
    
    section#content
        article.card
            h2= text

            if hint
                p 
                    i Hint: #{hint}
            a(href=`${id}?side=${sideToShow}` class="switch_side")= sideToShowDisplay
            br
            a(href='/php' class="next_card") Next Card!
    
